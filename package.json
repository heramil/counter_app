{
  "name": "counter-monorepo",
  "private": true,
  "scripts": {
    "dev:web": "npm --prefix apps/web run dev",
    "build:web": "npm --prefix apps/web run build",
    "preview:web": "npm --prefix apps/web run preview",
    "dev:api": "sh -c 'cd apps/api && php artisan serve --host=127.0.0.1 --port=8000'",
    "migrate": "sh -c 'cd apps/api && php artisan migrate --seed'",
    "dev": "concurrently -k -n API,WEB -c blue,green \"npm run dev:api\" \"npm run dev:web\""
  },
  "devDependencies": {
    "concurrently": "^9.0.1"
  }
}
